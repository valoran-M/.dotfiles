# See dunst(5) for all configuration options

[global]
    ### Display ###
    monitor = 1
    follow = keyboard

    ### Geometry ###
    width = 300
    height = 300
    origin = top-right
    offset = 10x50

    scale = 0
    notification_limit = 20

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0

    icon_corner_radius = 0
    indicate_hidden = yes
    transparency = 0

    separator_height = 2
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0
    frame_width = 3
    frame_color = "#282828"
    gap_size = 0
    separator_color = frame
    sort = yes


    ### Text ###
    font = FiraCode 8
    line_height = 0
    markup = full

    format = "<b>%s</b>\n%b"
    alignment = right
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle

    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left

    min_icon_size = 32
    max_icon_size = 128

    ### History ###
    sticky_history = yes
    history_length = 20

    browser = /usr/bin/xdg-open
    always_run_script = true

    title = Dunst
    class = Dunst

    corner_radius = 5
    ignore_dbusclose = false

    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false


[urgency_low]
    background = "#282828"
    foreground = "#98971a"
    frame_color = "#98971a"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#d79921"
    frame_color = "#d79921"
    timeout = 5
    override_pause_level = 10

[urgency_critical]
    background = "#282828"
    foreground = "#cc241d"
    frame_color = "#cc241d"
    timeout = 10
    override_pause_level = 60

